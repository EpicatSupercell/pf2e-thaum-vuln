<style type="text/css">
  .dropbox { width:100%; height:100px; margin:2px; border-radius: 5px; }
  .dropboxes { width: 1000px; padding: 10px; }
  .drop-item-content { line-height: 100px; text-align: center; }
</style>
<div class="dropboxes">
  {{#each implements}}
    <h3>{{counter}} {{localize "pf2e-thaum-vuln.dialog.manageImplements.implement"}} ({{name}})</h3>
    <div class="dropbox">
      <span
        class="flex-container item-content-wrapper"
        style="display: flex; height: 100%; width: 100%; border: 1px solid black"
        data-item-uuid="{{uuid}}"
        data-implement-slug="{{slug}}"
      >
        {{> "modules/pf2e-thaum-vuln/templates/implementPartial.hbs" implement=this}}
      </span>
    </div>
  {{/each}}
</div>